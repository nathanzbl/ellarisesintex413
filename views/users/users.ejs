<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Users | Ella Rises</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:wght@400&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --er-blue:     #99B7C6;
            --er-lavender: #978EC4;
            --er-cream:    #F9F5EA;
            --er-blush:    #FFD8D1;
            --er-pink:     #F9AFB1;
            --er-sage:     #9AB59D;
            --er-charcoal: #3A3F3B;
            --er-peach:    #F4B092;
            --er-rose:     #CE325B;
        }

        * { box-sizing: border-box; }

        body {
            margin: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 0;
            font-family: "Montserrat", system-ui, sans-serif;
            background: var(--er-cream);
            color: var(--er-charcoal);
        }

        .main-content {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
            width: 100%;
        }

        .data-card {
            max-width: 1200px;
            width: 100%;
            padding: 2.5rem 2.25rem;
            border-radius: 1.5rem;
            background-color: #ffffff;
            box-shadow: 0 14px 40px rgba(0, 0, 0, 0.08);
            border-top: 6px solid var(--er-pink);
        }

        .user-title {
            font-family: "DM Serif Display", serif;
            font-size: 2rem;
            text-align: center;
            letter-spacing: 0.06em;
            margin: 0 0 0.25rem;
        }

        .user-subtitle {
            font-size: 0.95rem;
            text-align: center;
            color: rgba(58, 63, 59, 0.7);
            margin-bottom: 2rem;
        }
        
        .controls-bar {
            display: flex;
            flex-wrap: wrap;
            align-items: flex-end;
            justify-content: space-between;
            margin-bottom: 1.5rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--er-blush);
        }
        
        .search-form {
            display: flex;
            flex-grow: 1;
            flex-wrap: wrap;
            gap: 1rem;
            align-items: flex-end;
            max-width: 100%;
        }

        .add-button-wrapper {
            text-align: center;
            flex-shrink: 0; 
            padding-bottom: 0.7rem;
        }

        .search-group {
            display: flex;
            flex-direction: column;
            flex-grow: 1;
            min-width: 150px;
        }
        
        .search-label {
            font-size: 0.75rem;
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: var(--er-charcoal);
            text-transform: uppercase;
        }
        
        .search-input {
            padding: 0.7rem 1rem;
            border: 2px solid var(--er-blush);
            border-radius: 0.75rem;
            font-family: inherit;
            font-size: 0.9rem;
            outline: none;
            transition: border-color 0.2s ease;
        }
        
        .search-input:focus {
            border-color: var(--er-pink);
        }

        .btn-search, .btn-clear {
            padding: 0.7rem 1rem;
            border-radius: 999px;
            border: none;
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.18s ease;
            width: 100%;
        }

        .btn-search {
            background: var(--er-sage);
            color: white;
            box-shadow: 0 5px 12px rgba(154, 181, 157, 0.4);
        }
        .btn-search:hover {
            background: rgba(154, 181, 157, 0.8);
        }
        
        .btn-clear {
            background: var(--er-blush);
            color: var(--er-charcoal);
            text-decoration: none;
            display: inline-block;
            text-align: center;
            margin-top: 0.5rem;
        }
        .btn-clear:hover {
            background: var(--er-pink);
            color: white;
        }

        .controls-actions-group {
            display: flex;
            gap: 0.75rem;
            align-items: flex;
        }

        .search-controls {
            display: flex;
            flex-direction: column;
            flex: 1;
        }

        .table-custom {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1.5rem;
        }

        .table-custom thead tr {
            background-color: var(--er-charcoal);
            color: var(--er-cream);
            font-size: 0.8rem;
            letter-spacing: 0.08em;
            text-transform: uppercase;
        }
        
        .table-custom th,
        .table-custom td {
            padding: 1rem 1.25rem;
            text-align: left;
            border-bottom: 1px solid var(--er-blush);
        }

        .table-responsive-wrapper {
            overflow-x: auto;
            width: 100%;
            -webkit-overflow-scrolling: touch;
        }

        .table-custom tbody tr:nth-child(even) {
            background-color: var(--er-cream);
        }

        .btn-action {
            padding: 0.7rem 1rem;
            border-radius: 999px;
            border: none;
            font-weight: 600;
            font-size: 0.85rem;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            cursor: pointer;
            box-shadow: 0 10px 24px rgba(206, 50, 91, 0.25);
            transition: all 0.18s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-add-user {
            background: var(--er-pink);
            color: #fff;
        }
        
        .btn-add-user:hover {
            background: var(--er-rose);
            transform: translateY(-1px);
        }

        .btn-small {
            padding: 0.75rem 1rem;
            border-radius: 999px;
            border: none;
            font-weight: 600;
            font-size: 0.65rem;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            cursor: pointer;
            box-shadow: 0 5px 12px rgba(32, 131, 47, 0.25);
            transition: all 0.18s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .btn-edit-user {
            background: var(--er-sage);
            color: #fff;
            box-shadow: none;
        }
        
        .btn-edit-user:hover {
            background: var(--er-blue);
            transform: translateY(-1px);
        }
        
        .btn-delete-user {
            background: var(--er-rose);
            color: #fff;
            box-shadow: none;
        }
        
        .btn-delete-user:hover {
            background: var(--er-charcoal);
            transform: translateY(-1px);
        }

        .message-alert {
            text-align: center;
            color: var(--er-rose);
            background: rgba(206, 50, 91, 0.07);
            padding: 0.8rem 1.2rem;
            border-radius: 0.75rem;
            margin-bottom: 1.5rem;
        }

        .message-warning {
            color: var(--er-charcoal);
            background: var(--er-blush);
            border: 1px solid var(--er-pink);
        }

        .pagination-container {
            display: flex;
            justify-content: center;
            margin-top: 2rem;
        }

        .custom-pagination {
            display: flex;
            list-style: none;
            padding: 0;
            border-radius: 0.75rem;
            overflow: hidden;
            overflow-x: auto;
            flex-wrap: nowrap;
            -webkit-overflow-scrolling: touch; 
        }
        
        .page-link {
            text-decoration: none;
            color: var(--er-charcoal);
            padding: 0.75rem 1rem;
            border: 1px solid var(--er-blush);
            transition: background-color 0.2s ease;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .page-item:not(:first-child) .page-link {
            border-left: none;
        }

        .page-item.active .page-link {
            background-color: var(--er-pink);
            border-color: var(--er-pink);
            color: white;
            box-shadow: 0 4px 10px rgba(249, 175, 177, 0.4);
            z-index: 1; 
        }

        .page-link:hover {
            background-color: var(--er-blush);
        }
        
        .page-item.disabled .page-link {
            color: rgba(58, 63, 59, 0.5);
            background-color: var(--er-cream);
            cursor: default;
            pointer-events: none;
        }
        
        @media (max-width: 768px) {
            .controls-bar {
                flex-direction: column;
                align-items: stretch;
            }
            .search-form {
                flex-direction: column;
                gap: 1.5rem;
                margin-bottom: 1.5rem;
            }
            .search-group {
                min-width: 100%;
                flex-basis: 100% !important;
            }
            .controls-actions-group {
                flex-direction: column;
                gap: 0.75rem;
            }
            .add-button-wrapper {
                text-align: left;
                padding-bottom: 0;
            }
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <%- include('../common/navbar.ejs') %>

    <div class="main-content">
        <div class="data-card">
            <h1 class="user-title">System Users</h1>
            <p class="user-subtitle">A view of all user accounts and their roles.</p>

            <div class="add-button-wrapper">
                <a href="/adduser" class="btn-action btn-add-user">Add User</a>
            </div>

            <div class="controls-bar">
                <form method="GET" action="/users" class="search-form">
                    <div class="search-group" style="flex-basis: 50%;">
                        <label for="search_name" class="search-label">Username</label>
                        <input 
                            type="text" 
                            name="search_name" 
                            id="search_name" 
                            class="search-input" 
                            placeholder="e.g., janedoe"
                            value="<%= typeof search_name !== 'undefined' ? search_name : '' %>"
                        >
                    </div>

                    <div class="search-group controls-actions-group" style="flex-basis: 20%; flex-grow: 0;">
                        <div class="search-controls">
                            <button type="submit" class="btn-search">Search</button>

                            <% if (typeof isSearching !== 'undefined' && isSearching) { %>
                                <a href="/users" class="btn-clear">Clear Filters</a>
                            <% } %>
                        </div>
                    </div>
                </form>
            </div>

            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                <div class="pagination-container">
                    <ul class="custom-pagination">
                        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                            <a class="page-link" href="/users?page=<%= currentPage - 1 %><%= isSearching ? '&search_name=' + (search_name || '') : '' %>">Previous</a>
                        </li>

                        <%
                            const maxPagesToShow = 7; 
                            const sidePages = Math.floor(maxPagesToShow / 2);

                            let startPage = Math.max(1, currentPage - sidePages);
                            let endPage = Math.min(totalPages, currentPage + sidePages);

                            if (endPage - startPage + 1 < maxPagesToShow) {
                                startPage = Math.max(1, endPage - maxPagesToShow + 1);
                            }
                            if (endPage - startPage + 1 < maxPagesToShow) {
                                endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
                            }
                        %>

                        <% if (startPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/users?page=1<%= isSearching ? '&search_name=' + (search_name || '') : '' %>">1</a>
                            </li>
                            <% if (startPage > 2) { %>
                                <li class="page-item disabled"><a class="page-link">...</a></li>
                            <% } %>
                        <% } %>

                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="/users?page=<%= i %><%= isSearching ? '&search_name=' + (search_name || '') : '' %>"><%= i %></a>
                            </li>
                        <% } %>

                        <% if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %>
                                <li class="page-item disabled"><a class="page-link">...</a></li>
                            <% } %>
                            <li class="page-item">
                                <a class="page-link" href="/users?page=<%= totalPages %><%= isSearching ? '&search_name=' + (search_name || '') : '' %>"><%= totalPages %></a>
                            </li>
                        <% } %>

                        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                            <a class="page-link" href="/users?page=<%= currentPage + 1 %><%= isSearching ? '&search_name=' + (search_name || '') : '' %>">Next</a>
                        </li>
                    </ul>
                </div>
            <% } %>

            <% if (typeof error_message !== 'undefined' && error_message) { %>
                <div class="message-alert">
                    <%= error_message %>
                </div>
            <% } %>

            <% if (!users || users.length === 0) { %>
                <div class="message-alert message-warning">
                    No users found <%= (typeof isSearching !== 'undefined' && isSearching) ? 'matching your criteria.' : 'in the database.' %>
                </div>
            <% } else { %>
                <div class="table-responsive-wrapper">
                    <table class="table-custom">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                                <th>Role</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let iCount = 0; iCount < users.length; iCount++) { %>
                                <tr>
                                    <td><%= users[iCount].id %></td>
                                    <td><%= users[iCount].username %></td>
                                    <td><%= users[iCount].role %></td>
                                    <td>
                                        <form action="/editUser/<%= users[iCount].id %>" method="get">
                                            <input type="submit" name="Edit" value="Edit" class="btn-small btn-edit-user"/>
                                        </form>
                                    </td>
                                    <td>
                                        <form 
                                            action="/deleteUser/<%= users[iCount].id %>" 
                                            method="post"
                                            onsubmit="return confirmDeletion(event);" 
                                        >
                                            <input type="submit" name="Delete" value="Delete" class="btn-small btn-delete-user"/>
                                        </form>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
    <%- include('../common/footer.ejs') %>
</body>
<script>
function confirmDeletion(event) {
    event.preventDefault(); 
    const form = event.currentTarget;

    Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#CE325B", 
        cancelButtonColor: "#9AB59D",
        confirmButtonText: "Yes, delete it!"
    }).then((result) => {
        if (result.isConfirmed) {
            form.submit();
        }
    });
}
</script>
</html>
