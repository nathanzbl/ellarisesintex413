<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Ella Rises | Events</title>

<style>
    :root {
        --er-blue:     #99B7C6;
        --er-lavender: #978EC4;
        --er-cream:    #F9F5EA;
        --er-blush:    #FFD8D1;
        --er-pink:     #F9AFB1;
        --er-sage:     #9AB59D;
        --er-charcoal: #3A3F3B;
        --er-peach:    #F4B092;
        --er-rose:     #CE325B;
    }

    * {
        box-sizing: border-box;
        font-family: "Montserrat", system-ui, sans-serif;
    }

    body {
        margin: 0;
        background: var(--er-cream);
        color: var(--er-charcoal);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .page-title {
        font-family: "DM Serif Display", serif;
        font-size: 2.4rem;
        text-align: center;
        margin: 2rem 0 0.5rem;
        letter-spacing: 0.03em;
    }

    .page-subtitle {
        text-align: center;
        color: rgba(58, 63, 59, 0.6);
        margin-bottom: 2rem;
        font-size: 0.95rem;
    }

    /* EVENT GRID */
    .event-grid {
        width: 90%;
        max-width: 1200px;
        margin: auto;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 28px;
        padding-bottom: 4rem;
    }

    /* EVENT CARDS */
    .event-card {
        display: block;
        text-decoration: none;
        color: inherit;
        background: white;
        border-radius: 1.4rem;
        padding: 2rem;
        border-top: 6px solid var(--er-pink);
        box-shadow: 0 12px 32px rgba(0,0,0,0.08);
        transition: 0.18s ease;
    }

    .event-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 16px 28px rgba(0,0,0,0.12);
    }

    .event-card h3 {
        margin: 0;
        font-size: 1.3rem;
        font-family: "DM Serif Display", serif;
        letter-spacing: 0.03em;
        color: var(--er-charcoal);
    }

    .event-card p {
        margin-top: 0.75rem;
        color: rgba(58,63,59,0.75);
        font-size: 0.93rem;
        line-height: 1.45;
    }

    .add-event-btn {
    display: inline-block;
    background: var(--er-pink);
    color: white;
    padding: 0.7rem 1.4rem;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    letter-spacing: 0.5px;
    transition: 0.2s ease;
    box-shadow: 0 4px 12px rgba(249,175,177,0.35);
    }

    .add-event-btn:hover {
        background: var(--er-rose);
    }

</style>
</head>

<body>

<%- include('../common/navbar.ejs') %>

<!-- Add Event Button -->
<div style="width: 85%; margin: 0 auto; text-align: right; margin-bottom: 20px;">
    <a href="/events/add" class="add-event-btn">+ Add Event</a>
</div>

<div class="event-grid">
    <% eventDefs.forEach(def => { %>
        <a class="event-card" href="/events/<%= def.eventdefid %>">
            <h3><%= def.eventname %></h3>
            <p><%= def.eventdescription %></p>
        </a>
    <% }) %>
</div>
<%- include('../common/footer.ejs') %>
</body>
</html>
