<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Manage Events | Ella Rises</title>

<style>
    body {
        background-color: #faf6ef;
        font-family: Arial, sans-serif;
        margin: 0;
    }

    header {
        background-color: #f7cfd5;
        padding: 20px 50px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .donate-btn {
        background-color: #9bbccc;
        color: white !important;
    }

    .page-title {
        text-align: center;
        margin: 35px 0;
        font-size: 42px;
        font-family: 'Georgia', serif;
        color: #333;
    }

    .container {
        width: 70%;
        margin: auto;
        background: white;
        border-radius: 20px;
        padding: 40px;
        border-top: 10px solid #f7cfd5;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    th, td {
        padding: 14px;
        border-bottom: 1px solid #eee;
        font-size: 16px;
    }

    th {
        text-align: left;
        color: #666;
    }

    .pink-btn, .edit-btn, .delete-btn {
        padding: 10px 18px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: bold;
        text-decoration: none;
        color: white;
        display: inline-block;
        transition: all 0.2s ease;
    }

    .pink-btn {
        background-color: #e7a2b8;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(231, 162, 184, 0.3);
    }

    .pink-btn:hover {
        background-color: #CE325B;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(206, 50, 91, 0.4);
    }

    .edit-btn {
        background-color: #9bbccc;
        box-shadow: 0 2px 8px rgba(155, 188, 204, 0.3);
    }

    .edit-btn:hover {
        background-color: #7a9db4;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(122, 157, 180, 0.4);
    }

    .delete-btn {
        background-color: #d67878;
        border: none;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(214, 120, 120, 0.3);
    }

    .delete-btn:hover {
        background-color: #b85555;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(184, 85, 85, 0.4);
    }
</style>
</head>

<body>

<%- include('../common/navbar.ejs') %>

<h1 class="page-title">Manage Events</h1>

<div class="container">

    <a href="/events/add" class="pink-btn">+ Add New Event</a>

    <table>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>

        <!-- No events case -->
        <% if (events.length === 0) { %>
        <tr>
            <td colspan="4" style="text-align:center; padding:20px; color:#777;">
                No events found.
            </td>
        </tr>
        <% } %>

        <!-- Loop through events -->
        <% events.forEach(event => { %>
        <tr>
            <td><%= event.eventname %></td>
            <td><%= event.formattedDate %></td>
            <td><%= event.eventlocation %></td>
            <td>

                <!-- Edit button -->
                <a href="/events/edit/<%= event.eventid %>" class="edit-btn">Edit</a>

                <!-- Delete POST form -->
                <form action="/events/delete/<%= event.eventid %>" 
                      method="POST" 
                      style="display:inline;">
                    <button class="delete-btn" 
                            onclick="return confirm('Are you sure you want to delete this event?');">
                        Delete
                    </button>
                </form>

            </td>
        </tr>
        <% }) %>

    </table>
</div>
<%- include('../common/footer.ejs') %>
</body>
</html>
