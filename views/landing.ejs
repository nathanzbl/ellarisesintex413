<style>
/* ---------------- COLOR VARIABLES ---------------- */
:root {
    --pink: #FFD7D1;
    --er-pink: #F9AFB1;
    --er-rose: #CE325B;
    --dark-text: #1f2937;
    --light-bg: #f7f7f7;
    --text-gray: #4A4A4A;
    --border-color: rgba(0,0,0,0.05);
}

/* ---------------- GLOBAL ---------------- */
body {
    margin: 0;
    background-color: white;
    font-family: 'Montserrat', sans-serif;
}

/* ---------------- HERO SLIDESHOW ---------------- */
.hero-wrapper {
    position: relative;
    width: 100%;
    height: 85vh;
    overflow: hidden;
}

.hero-slideshow img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    top: 0;
    left: 0;
    opacity: 0;
    transition: opacity 1.3s ease-in-out;
}

.hero-slideshow img.active {
    opacity: 1;
}

/* Dark overlay so text stands out */
.hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.45);
    z-index: 1;
}

/* ---------------- HERO TEXT ---------------- */
.hero-content {
    position: absolute;
    z-index: 2;
    top: 50%;
    width: 100%;
    transform: translateY(-50%);
    text-align: center;
    padding: 0 2rem;
}

/* Pink-outlined white text */
.text-outline {
    color: white;
    font-family: "DM Serif Display", serif;
    text-shadow:
        -1px -1px 0 var(--er-pink);
}

/* Title */
.hero-title {
    font-size: 4rem;
    margin-bottom: 1rem;
    letter-spacing: 0.05em;
}

/* Subtitle */
.hero-subtitle {
    font-size: 1.7rem;
    margin-bottom: 2rem;
}

/* Pink button */
.cta-btn {
    background: var(--er-pink);
    color: white;
    padding: 14px 32px;
    border-radius: 999px;
    font-weight: 600;
    font-size: 1.1rem;
    text-decoration: none;
    transition: 0.25s;
    box-shadow: 0 8px 25px rgba(249,175,177,0.45);
}
.cta-btn:hover {
    background: var(--er-rose);
}

/* ---------------- SECTION BELOW HERO ---------------- */
.section {
    padding: 80px 20px;
    text-align: center;
}

.section-light {
    background-color: var(--light-bg);
}

.section-content {
    max-width: 72rem;
    margin: 0 auto;
}

.section-content h2 {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--dark-text);
    margin-bottom: 20px;
}

/* ---------------- STATS GRID ---------------- */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 32px;
    margin-top: 40px;
}

.stat-item {
    padding: 24px;
    background-color: white;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: 0.3s;
}
.stat-item:hover {
    transform: translateY(-5px);
}

.stat-item .number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--er-rose);
}

.stat-item .label {
    margin-top: 8px;
    font-size: 1rem;
    color: var(--text-gray);
}

/* ---------------- PROGRAM CARDS ---------------- */
.program-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 40px;
    margin-top: 40px;
}

.program-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--border-color);
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: 0.25s;
}
.program-card:hover {
    transform: translateY(-5px);
}

.program-card img {
    width: 100%;
    height: 250px;
    object-fit: cover;
}

.program-content-wrapper {
    padding: 28px;
}

.program-content-wrapper h3 {
    margin-top: 0;
    font-size: 1.5rem;
}

.program-content-wrapper p {
    color: var(--text-gray);
    line-height: 1.6;
}
</style>
</head>

