<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>View Donations | Ella Rises</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:wght@400&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">

  <style>
    :root {
      --er-blue:     #99B7C6;
      --er-lavender: #978EC4;
      --er-cream:    #F9F5EA;
      --er-blush:    #FFD8D1;
      --er-pink:     #F9AFB1;
      --er-sage:     #9AB59D;
      --er-charcoal: #3A3F3B;
      --er-peach:    #F4B89D;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: 'Montserrat', sans-serif;
      background: var(--er-cream);
      color: var(--er-charcoal);
    }

    .page-wrapper {
      min-height: 100vh;
      padding: 24px;
      display: flex;
      flex-direction: column;
      gap: 24px;
    }

    header {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: baseline;
      gap: 12px;
    }

    h1 {
      font-family: 'DM Serif Display', serif;
      font-size: 2.2rem;
      margin: 0;
      color: var(--er-lavender);
    }

    .subtitle {
      margin: 0;
      font-size: 0.98rem;
      color: #555;
    }

    .card {
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.06);
      padding: 20px 20px 24px;
    }

    .filters {
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      margin-bottom: 16px;
      align-items: flex-end;
    }

    .filter-group {
      display: flex;
      flex-direction: column;
      gap: 4px;
      min-width: 160px;
      flex: 1;
    }

    .filter-group label {
      font-size: 0.85rem;
      font-weight: 600;
      color: #555;
    }

    .filter-group input,
    .filter-group select {
      padding: 8px 10px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 0.95rem;
      font-family: inherit;
    }

    .filter-actions {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }

    .btn {
      display: inline-block;
      padding: 9px 16px;
      border-radius: 8px;
      border: none;
      cursor: pointer;
      font-size: 0.95rem;
      font-weight: 600;
      font-family: inherit;
      text-decoration: none;
      text-align: center;
    }

    .btn-primary {
      background: var(--er-sage);
      color: #fff;
    }

    .btn-primary:hover {
      background: var(--er-lavender);
    }

    .btn-secondary {
      background: #fff;
      color: var(--er-charcoal);
      border: 1px solid #ccc;
    }

    .btn-secondary:hover {
      border-color: var(--er-lavender);
      color: var(--er-lavender);
    }

    .table-wrapper {
      overflow-x: auto;
      border-radius: 12px;
      border: 1px solid #eee;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.9rem;
      min-width: 900px;
    }

    thead {
      background: var(--er-blue);
      color: #fff;
    }

    th,
    td {
      padding: 10px 12px;
      text-align: left;
      border-bottom: 1px solid #f0f0f0;
      white-space: nowrap;
    }

    th {
      font-weight: 600;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.04em;
    }

    tbody tr:nth-child(even) {
      background: #fafafa;
    }

    .text-right {
      text-align: right;
    }

    .tag {
      display: inline-block;
      padding: 2px 8px;
      border-radius: 999px;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .tag-anon {
      background: var(--er-blush);
      color: #7a3a2f;
    }

    .tag-visible {
      background: #e5f5ec;
      color: #2f6f4a;
    }

    .pagination {
      margin-top: 16px;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 6px;
      flex-wrap: wrap;
      font-size: 0.9rem;
    }

    .page-link {
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid #ddd;
      text-decoration: none;
      color: var(--er-charcoal);
    }

    .page-link.active {
      background: var(--er-lavender);
      color: #fff;
      border-color: var(--er-lavender);
      font-weight: 600;
    }

    .page-link.disabled {
      opacity: 0.4;
      pointer-events: none;
    }

    @media (max-width: 768px) {
      .page-wrapper {
        padding: 16px;
      }

      h1 {
        font-size: 1.8rem;
      }
    }
  </style>
</head>

<body>
  <div class="page-wrapper">
    <header>
      <div>
        <h1>Donations</h1>
        <p class="subtitle">Admin view of all recorded donations for Ella Rises.</p>
      </div>
    </header>

    <div class="card">
      <!-- Filters -->
      <form class="filters" method="GET" action="/donations">
        <div class="filter-group">
          <label for="participantSearch">Participant name or email</label>
          <input
            type="text"
            id="participantSearch"
            name="participantSearch"
            placeholder="Search participant"
            value="<%= typeof participantSearch !== 'undefined' ? participantSearch : '' %>"
          />
        </div>

        <div class="filter-group">
          <label for="eventSearch">Event</label>
          <input
            type="text"
            id="eventSearch"
            name="eventSearch"
            placeholder="Search event"
            value="<%= typeof eventSearch !== 'undefined' ? eventSearch : '' %>"
          />
        </div>

        <div class="filter-group">
          <label for="minAmount">Min amount</label>
          <input
            type="number"
            step="0.01"
            id="minAmount"
            name="minAmount"
            placeholder="0"
            value="<%= typeof minAmount !== 'undefined' ? minAmount : '' %>"
          />
        </div>

        <div class="filter-group">
          <label for="maxAmount">Max amount</label>
          <input
            type="number"
            step="0.01"
            id="maxAmount"
            name="maxAmount"
            placeholder="Any"
            value="<%= typeof maxAmount !== 'undefined' ? maxAmount : '' %>"
          />
        </div>

        <div class="filter-actions">
          <button type="submit" class="btn btn-primary">Apply filters</button>
          <a href="/donations" class="btn btn-secondary">Clear</a>
        </div>
      </form>

      <!-- Table -->
      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Participant</th>
              <th>Email</th>
              <th>Event</th>
              <th class="text-right">Amount</th>
              <th>Date</th>
              <th>Method</th>
              <th>Anonymous</th>
            </tr>
          </thead>
          <tbody>
            <% if (donations && donations.length > 0) { %>
              <% donations.forEach(function(donation) { %>
                <tr>
                  <td><%= donation.donationid %></td>
                  <td><%= donation.participantname || 'Anonymous' %></td>
                  <td><%= donation.participantemail || 'N/A' %></td>
                  <td><%= donation.eventname || 'N/A' %></td>
                  <td class="text-right">
                    $<%= Number(donation.donationamount).toFixed(2) %>
                  </td>
                  <td><%= donation.donationdate %></td>
                  <td><%= donation.paymentmethod || 'N/A' %></td>
                  <td>
                    <% if (donation.isanonymous) { %>
                      <span class="tag tag-anon">Anonymous</span>
                    <% } else { %>
                      <span class="tag tag-visible">Visible</span>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="8">No donations found with the current filters.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
        <div class="pagination">
          <% const current = Number(currentPage || 1); %>

          <!-- Previous -->
          <a
            class="page-link <%= current === 1 ? 'disabled' : '' %>"
            href="?page=<%= current - 1 %><%= participantSearch ? '&participantSearch=' + encodeURIComponent(participantSearch) : '' %><%= eventSearch ? '&eventSearch=' + encodeURIComponent(eventSearch) : '' %><%= minAmount ? '&minAmount=' + minAmount : '' %><%= maxAmount ? '&maxAmount=' + maxAmount : '' %>"
          >
            Prev
          </a>

          <!-- Page numbers -->
          <% for (let p = 1; p <= totalPages; p++) { %>
            <a
              class="page-link <%= p === current ? 'active' : '' %>"
              href="?page=<%= p %><%= participantSearch ? '&participantSearch=' + encodeURIComponent(participantSearch) : '' %><%= eventSearch ? '&eventSearch=' + encodeURIComponent(eventSearch) : '' %><%= minAmount ? '&minAmount=' + minAmount : '' %><%= maxAmount ? '&maxAmount=' + maxAmount : '' %>"
            >
              <%= p %>
            </a>
          <% } %>

          <!-- Next -->
          <a
            class="page-link <%= current === totalPages ? 'disabled' : '' %>"
            href="?page=<%= current + 1 %><%= participantSearch ? '&participantSearch=' + encodeURIComponent(participantSearch) : '' %><%= eventSearch ? '&eventSearch=' + encodeURIComponent(eventSearch) : '' %><%= minAmount ? '&minAmount=' + minAmount : '' %><%= maxAmount ? '&maxAmount=' + maxAmount : '' %>"
          >
            Next
          </a>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
