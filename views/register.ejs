<!-- TEAM NOTE: Owner Registration Page matching login.ejs styling -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ella Rises - Owner Registration</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:wght@400&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --er-blue: #99B7C6;
            --er-lavender: #978EC4;
            --er-cream: #F9F5EA;
            --er-blush: #FFD8D1;
            --er-pink: #F9AFB1;
            --er-sage: #9AB59D;
            --er-charcoal: #3A3F3B;
            --er-peach: #F4B092;
            --er-rose: #CE325B;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            font-family: 'Montserrat', sans-serif;
            background-color: var(--er-cream);
            color: var(--er-charcoal);
            min-height: 100vh;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1rem;
            padding-top: 4rem;
        }

        h1, h2, h3, .heading {
            font-family: 'DM Serif Display', serif;
            color: var(--er-charcoal);
            font-weight: 400;
        }

        a {
            color: var(--er-rose);
            text-decoration: none;
            transition: all 0.2s ease;
        }

        a:hover {
            text-decoration: underline;
        }

        .card {
            background-color: white;
            border-radius: 1rem;
            box-shadow: 0 4px 20px rgba(58, 63, 59, 0.08);
            border: 1px solid var(--er-blush);
            width: 100%;
            max-width: 28rem;
            padding: 2.5rem;
        }

        .header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .header-logo {
            width: 80px;
            height: auto;
            margin: 0 auto 1rem;
            display: block;
        }

        .header h2 {
            margin-top: 1rem;
            font-size: 1.875rem;
        }

        .header p {
            margin-top: 0.5rem;
            font-size: 0.875rem;
            color: var(--er-charcoal);
            opacity: 0.7;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        label {
            display: block;
            font-family: 'Montserrat', sans-serif;
            color: var(--er-charcoal);
            font-size: 0.875rem;
            font-weight: 500;
            margin-bottom: 0.25rem;
        }

        input {
            font-family: 'Montserrat', sans-serif;
            border: 1px solid var(--er-sage);
            border-radius: 0.5rem;
            background-color: white;
            color: var(--er-charcoal);
            width: 100%;
            padding: 0.5rem 0.75rem;
            font-size: 0.875rem;
        }

        input:focus {
            outline: none;
            border-color: var(--er-rose);
            box-shadow: 0 0 0 3px rgba(206, 50, 91, 0.1);
        }

        input::placeholder {
            color: var(--er-blue);
        }

        .hint-text {
            margin-top: 0.25rem;
            font-size: 0.75rem;
            color: var(--er-charcoal);
            opacity: 0.7;
        }

        .btn-primary {
            background-color: var(--er-pink);
            color: white;
            border: none;
            width: 100%;
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        .btn-primary:hover {
            background-color: var(--er-rose);
        }

        .btn-primary:focus {
            outline: none;
            box-shadow: 0 0 0 2px var(--er-cream), 0 0 0 4px var(--er-rose);
        }

        .login-link {
            margin-top: 1.5rem;
            text-align: center;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .message-box {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1000;
            padding: 1.5rem;
            border-radius: 0.75rem;
            box-shadow: 0 10px 15px -3px rgba(58, 63, 59, 0.1);
            max-width: 90%;
            min-width: 300px;
            text-align: center;
        }

        .message-box.hidden {
            display: none;
        }

        .success-box { 
            background-color: var(--er-cream); 
            border: 2px solid var(--er-sage); 
            color: var(--er-charcoal); 
        }

        .error-box { 
            background-color: var(--er-blush); 
            border: 2px solid var(--er-rose); 
            color: var(--er-rose); 
        }

        .message-text {
            font-size: 0.875rem;
            font-weight: 500;
        }

        .message-close {
            margin-top: 0.5rem;
            font-size: 0.75rem;
            font-weight: 600;
            padding: 0.25rem 0.75rem;
            border-radius: 0.25rem;
            background-color: var(--er-pink);
            color: white;
            border: none;
            cursor: pointer;
        }

        .message-close:hover {
            background-color: var(--er-rose);
        }

        @media (min-width: 768px) {
            .card {
                padding: 2.5rem;
            }
        }
    </style>
</head>
<body>

    <!-- Owner Registration Card -->
    <div class="card">

        <!-- Header -->
        <div class="header">
            <img src="/images/ellariseslogo.png.avif" alt="Ella Rises Logo" class="header-logo">
            <h2 class="heading">Owner Registration</h2>
            <p>Create your Ella Rises owner account</p>
        </div>

        <!-- Registration Form -->
        <form id="ownerRegForm" onsubmit="handleRegistration(event)">
            
            <div class="form-group">
                <label for="username">Username</label>
                <input id="username" name="username" type="text" required placeholder="Choose a username">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" name="password" type="password" required minlength="6" placeholder="At least 6 characters">
                <p class="hint-text">Must be at least 6 characters long</p>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input id="confirmPassword" name="confirmPassword" type="password" required minlength="6" placeholder="Re-enter your password">
            </div>

            <div class="form-group">
                <button type="submit" class="btn-primary">Register as Owner</button>
            </div>
        </form>

        <!-- Back to Login Link -->
        <div class="login-link">
            <a href="/login">Already have an account? Sign in</a>
        </div>

    </div>

    <!-- Message Box -->
    <div id="messageBox" class="message-box hidden" role="alert">
        <p id="messageText" class="message-text"></p>
        <button onclick="hideMessage()" class="message-close">Close</button>
    </div>

    <script>
        function showMessage(message, isError = false) {
            const box = document.getElementById('messageBox');
            const text = document.getElementById('messageText');
            text.textContent = message;
            
            box.className = 'message-box ' + (isError ? 'error-box' : 'success-box');
        }

        function hideMessage() {
            document.getElementById('messageBox').classList.add('hidden');
        }

        async function handleRegistration(event) {
            event.preventDefault();

            const form = document.getElementById('ownerRegForm');
            const formData = new FormData(form);

            // Client-side password match check
            const password = formData.get('password');
            const confirmPassword = formData.get('confirmPassword');

            if (password !== confirmPassword) {
                showMessage('Passwords do not match!', true);
                return;
            }

            try {
                const response = await fetch('/register', {
                    method: 'POST',
                    body: new URLSearchParams(formData),
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    }
                });

                const result = await response.json();

                if (response.ok) {
                    showMessage('Registration successful! Redirecting to login...', false);
                    setTimeout(() => {
                        window.location.href = result.redirectTo;
                    }, 1500);
                } else {
                    showMessage(`Registration failed: ${result.message}`, true);
                }
            } catch (error) {
                console.error('Registration error:', error);
                showMessage('An unexpected error occurred during registration.', true);
            }
        }
    </script>

</body>
</html>
